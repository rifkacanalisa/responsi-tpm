<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#000075"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_nama_rs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="Nama rumah sakit bisa jadi panjang jadi mohon tidak emosi karena memang begitu"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nama_rs"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Alamat :"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nama_rs"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/alamat"
                android:maxLines="3"
                android:text="Jl. Raya Terusan Kopo Sayati Margahayu kab. Bandung Kabupaten Bandung"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_maps"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/alamat"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#00ff3c"
                android:text="MAPS"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>